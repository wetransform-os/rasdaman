{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "default_crs": "SECORE_URL/crs/EPSG/0/4326",
    "mock": false,
    "track_files": false,
    "automated": true
  },

  "input": {

    "coverage_id": "test_wcst_import_collection_exists",

    "paths": [

      "*.tiff"

    ]

  },

  "recipe": {

    "name": "map_mosaic",
    "options": {

	  "tiling": "ALIGNED [0:500, 0:500]"
    }

  },

  "hooks": [
    {
      "description": "Create a collection in rasdaman",
      "when": "before_import",
      "cmd": "rasql -q 'create collection test_wcst_import_collection_exists RGBSet' --user rasadmin --passwd rasadmin",
      "abort_on_error": false
    },
    {
      "description": "Drop collection in rasdaman",
      "when": "after_import",
      "cmd": "rasql -q 'drop collection test_wcst_import_collection_exists' --user rasadmin --passwd rasadmin",
      "abort_on_error": true
    }
 ]

}
