{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "default_crs": "SECORE_URL/crs/EPSG/0/4326",
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "test_rgb",
    "paths": [
      "rgb.png"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "coverage": {
        "crs": "OGC/0/Index2D",
        "metadata": {
          "type": "json",
          "global": {
            "resolution": "'1'"
          }
        },
        "slicer": {
          "type": "gdal",
          "bands": [
            {
              "name": "red",
              "identifier": "red"
            }, {
              "name": "green",
              "identifier": "green"
            }, {
              "name": "blue",
              "identifier": "blue"
            }
          ],
          "axes": {
            "j": {
              "min": "${gdal:maxY}",
              "max": "${gdal:minY}",
              "resolution": "-1"
            },
            "i": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            }
          }
        }
      },
      "tiling": "ALIGNED [0:1023, 0:1023] TILE SIZE 4194304"
    }
  }
}
