{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "track_files": false,
    "mock": false,
    "automated": true
  },
  "input": {
    "coverage_id": "test_365_days_irregular",
    "paths": [
      "*.nc"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "tiling": "ALIGNED [0:*] tile size 4194304",    
      "coverage": {
        "crs": "OGC/0/AnsiDate",
        "metadata": {
          "type": "xml",
          "global": {

          }
        },
        "slicer": {
          "type": "netcdf",
	      "pixelIsPoint": true,
          "bands": [
            {
              "name": "wind",
              "identifier": "wind"
            }
          ],
          "axes": {
            "ansi": {
              "statements": "from datetime import datetime, timedelta",
                "min": "(datetime(2023,1,1,0,0,0) + timedelta(days=${netcdf:variable:time:min})).strftime(\"%Y-%m-%dT%H:%M\")",
                "max": "(datetime(2023,1,1,0,0,0) + timedelta(days=${netcdf:variable:time:max})).strftime(\"%Y-%m-%dT%H:%M\")",
	          "directPositions": "[(datetime(2023,1,1,0,0,0) + timedelta(days=x)).strftime(\"%Y-%m-%dT%H:%M\") for x in ${netcdf:variable:time}]",
	          "irregular": true
            }
          }
        }
      }
    }
  }
}
