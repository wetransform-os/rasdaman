for $c0 in (test_wcps_irregular_time_germany)

let $sub := [ansi:"CRS:1"(0)],
    $bands := ($c0[ $sub ] - min($c0[ $sub ])) / (max($c0[ $sub ]) - min($c0[ $sub ])) * 255
return encode(
         scale(
           $bands,
           { 
             Long:"CRS:1"(0:60), Lat:"CRS:1"(0:70)
           } 
        ) + avg($c0[ $sub ]),   
       "png"
)
