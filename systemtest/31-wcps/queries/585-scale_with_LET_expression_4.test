for $c0 in (test_wcps_irregular_time_germany)

let $sub := $c0[ansi:"CRS:1"(0)],
    $bands := ( ($sub - min($sub)) / (max($sub) - min($sub)) ) * 255
return encode(
         scale(
           $bands,
           { 
             Long:"CRS:1"(0:60), Lat:"CRS:1"(0:70)
           } 
        ) + avg($sub),   
       "png"
)
