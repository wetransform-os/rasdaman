{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "mock": false,
    "track_files": false,
    "automated": true,
    "blocking": false,
    "skip": true
  },
  "input": {
    "coverage_id": "test_after_hook_execute_if_irregular_timeseries_recipe",
    "paths": [
      "*.tif"
    ]
  },
  "recipe": {
    "name": "time_series_irregular",
    "options": {
      "wms_import": true,
      "time_parameter": {
        "filename": {
          "regex": "(.*)_(.*)\\.(.*)",
          "group": "1"
        },
        "datetime_format": "YYYYMMDD"
      },
      "time_crs": "SECORE_URL/crs/OGC/0/AnsiDate?axis-label=\"date\"",
      "tiling": "ALIGNED [0:0, 0:999, 0:999]"
    }
  },
  "hooks": [
      {
        "description": "if import failed, print content of the input file",
        "when": "after_import",
        "execute_if": "import_failed",
        "cmd": "cat ${file:path}"
      }
  ]
}
