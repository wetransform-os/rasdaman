<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.rasdaman</groupId>
    <artifactId>petascope-main</artifactId>
    <packaging>war</packaging>
    <version>${version}</version>
    <name>petascope-main</name>
    <description>Petascope main application</description>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <!-- to disable error when generating javadoc for java 1.8 -->
        <additionalparam>-Xdoclint:none</additionalparam>

        <version>@PROJECT_VERSION@</version>
        <sourceDir>${project.basedir}</sourceDir>
        <buildDir>@BUILD_DIR@/petascope_main</buildDir>
        <gdalJavaJarPath>@GDAL_JAVA_JAR_PATH@</gdalJavaJarPath>
    </properties>

   <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.10</version>
    </parent>

    <dependencies>
    
        <dependency>
            <groupId>org.rasdaman</groupId>
            <artifactId>petascope-core</artifactId>
            <version>${version}</version>
        </dependency>
        
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-devtools</artifactId>
            <optional>true</optional>
        </dependency> 
        
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>       



        <!--A jar web application should not need to include this dependency-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-tomcat</artifactId>
            <scope>provided</scope>
        </dependency>


        <!-- For loading JSP files with embedded Tomcat -->
        <dependency>
            <groupId>org.apache.tomcat.embed</groupId>
            <artifactId>tomcat-embed-jasper</artifactId>
            <scope>provided</scope>
        </dependency>
       
        <!--https://dev.maxmind.com/geoip/geoip2/geolite2/ -->
        <dependency>
            <groupId>com.maxmind.geoip2</groupId>
            <artifactId>geoip2</artifactId>
            <version>2.12.0</version>
        </dependency>

    </dependencies>
    <build>
        <finalName>rasdaman</finalName>
        <!-- The built package should be in build directory, not in source directory -->
        <directory>${buildDir}/target/</directory>


        <plugins>
            <!-- Database schema versions migration -->
            <plugin>
                <groupId>org.liquibase</groupId>
                <artifactId>liquibase-maven-plugin</artifactId>
                <version>3.5.3</version>
                <configuration>                  
                   <!-- used for: mvn liquibase:diff -->
                   <propertyFile>src/main/resources/liquibase.properties</propertyFile>      
                </configuration>                
            </plugin>
            
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.12.4</version>
                <configuration>
                    <skipTests>true</skipTests>
                </configuration>
            </plugin>

            <plugin>
	            <artifactId>maven-antrun-plugin</artifactId>
	            <executions>
	            
                    <!-- copy gdal.jar to rasdaman.war -->
                    <execution>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <copy file="${gdalJavaJarPath}"
                                                          todir="${buildDir}/target/rasdaman/WEB-INF/lib"/>
                            </target>
                        </configuration>
                    </execution>
                    
                    <!-- copy wsclient to rasdaman.war -->
                    <execution>
                        <id>test</id>
                        <phase>test</phase>
                        <configuration>
                            <target>
                                <copy todir="${buildDir}/target/classes/public/ows">
                                    <fileset dir="${sourceDir}/../../wcs-client/app/ows" includes="**/*" />
                                </copy>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    
	            </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <finalName>
                        rasdaman-geo-api
                    </finalName>
                </configuration>
                <executions>
                    <execution>
                        <id>make-a-jar</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            
            
            <!-- for JDK 17 -->        
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.2</version>
                <configuration>
                    <useCache>false</useCache>
                </configuration>
            </plugin>            

        </plugins>
    </build>
</project>
