{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "mock": false,
    "track_files": false,
    "blocking": false,
    "automated": true,
    "skip": true
  },
  "input": {
    "coverage_id": "test_after_hook_executed_if_import_failed",
    "paths": [
      "*.tif"
    ]
  },
  "recipe": {
    "name": "map_mosaic",
    "options": {
    }
  }, 
  "hooks": [
      {
        "description": "if import failed, print content of the input file",
        "when": "after_ingestion",
        "execute_if": "import_failed",
        "cmd": "cat ${file:path}"
      }
  ]
}
