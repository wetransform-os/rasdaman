for $c in (test_rgb) return encode((unsigned char)
		coverage filteredImage
		over $px x(10:24),
                     $py y(10:23)
		values
			condense +
			over $kx x(-1:1),
                             $ky y(-1:1)
			using
				(coverage kernel
				over $x x (-1:1),
                                     $y y(-1:1)
				value list < 1; 1; 1; 0; 0; 0; -1; -1; -1 >
				)[x($kx),y($ky)]
					*
				($c[i($px+$kx),j($py+$ky)]).red
        , "image/png", "nodata=0")
