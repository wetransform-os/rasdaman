{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "mock": false,
    "track_files": false,
    "blocking": false,
    "automated": true
  },
  "input": {
    "coverage_id": "test_after_ingestion_hook_with_bbox",
    "paths": [
      "*.tif"
    ]
  },
  "recipe": {
    "name": "map_mosaic",
    "options": {
    }
  }, 
  "hooks": [
      {
        "description": "create file by gdalwarp",
        "when": "after_ingestion",
        "cmd": "gdalwarp -overwrite -te ${bbox:E:min} ${bbox:N:min} ${bbox:E:max} ${bbox:N:max} ${file:path} /tmp/test.tiff"
      }, 
      {
        "description": "remove temp file.",
        "when": "after_ingestion",
        "cmd": "rm -f /tmp/test.tiff"
      }
  ]
}
