# User-specified variables, e.g: make PROJECT_VERSION=9.8.0
# PROJECT_VERSION=9.8.0
# BUILD_DIR=../../build/java/target/

ifeq ($(BUILD_DIR),)
$(error BUILD_DIR was not provided)
endif
ifeq ($(PROJECT_VERSION),)
$(error PROJECT_VERSION was not provided)
endif

target = $(BUILD_DIR)/target/rasdaman.war
targetapidocs = $(BUILD_DIR)/target/site/apidocs

MVN = mvn

all: $(target)

$(target): pom.xml $(shell find -name '*.java')
	rm -rf $(BUILD_DIR)/target && $(MVN) -q -B package -Prasnet -f pom.xml \
															  -Dversion=$(PROJECT_VERSION) \
															  -DbuildDir=$(BUILD_DIR)
